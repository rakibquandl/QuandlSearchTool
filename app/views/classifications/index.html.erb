<h1>Classification List</h1>

<table>
  <tr>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @classifications.each do |classification| %>

      <%if classification.value == "Unclassified" %>
          <tr class="<%= cycle('oddrow', 'evenrow') %>">
            <td><%= classification.value %></td>
            <td><%= link_to 'Show', classification %></td>
            <td><%= link_to 'Edit', edit_classification_path(classification) %></td>
          </tr>
      <%else%>

      <tr class="<%= cycle('oddrow', 'evenrow') %>">
        <td><%= classification.value %></td>
        <td><%= link_to 'Show', classification %></td>
        <td><%= link_to 'Edit', edit_classification_path(classification) %></td>
        <td><%= link_to 'Destroy', classification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
<% end %>
</table>

<br />

<%= link_to 'New Classification', new_classification_path %>
&nbsp&nbsp<%= link_to 'Go To Search Items', search_items_path(:status=> Classification.find_by_value("Unclassified").id) %>

